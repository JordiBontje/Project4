<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="App2.Views.NewItemPage"
		Title="New Item">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save" Clicked="Save_Clicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Spacing="20" Padding="10">
			<Label Text="Title" FontSize="Medium" />
			<Entry Text="{Binding Item.Title}" FontSize="Small" />

            <Label Text="Ingredients" FontSize="Medium" />
            <Editor Text="{Binding Item.Ingredients}" FontSize="Small" Margin="0" />

            <Label Text="Cookingtime" FontSize="Medium" />
            <Editor Text="{Binding Item.Cookingmin}" FontSize="Small" Margin="0" />

            <Label Text="Preperation time" FontSize="Medium" />
            <Editor Text="{Binding Item.Preptimemin}" FontSize="Small" Margin="0" />

            <Label Text="Method" FontSize="Medium" />
			<Editor Text="{Binding Item.Method}" FontSize="Small" Margin="0" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
